<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/hm_gary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.MyOrderActivity">
    <RelativeLayout
        android:id="@+id/tl_my_order_mTool"
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <include layout="@layout/btn_back"></include>
        <TextView
            android:text="我的预约"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/tb_my_order_mTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabSelectedTextColor="@color/text_color"
            app:tabIndicatorHeight="0dp"
            >
        </android.support.design.widget.TabLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:background="@drawable/background2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <TextView
        android:background="@color/back_ground"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_order_mPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>
