<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/free_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView

            android:id="@+id/my_self_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/distance_15"
            android:gravity="center"
            android:text="消息提示"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_18" />

      <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_myself_dialog_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_payorder_wechatphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/distance"
                android:layout_marginLeft="@dimen/distance"
                android:paddingBottom="@dimen/distance"
                android:paddingTop="@dimen/distance"
                android:src="@mipmap/alipay" />

            <TextView
                android:id="@+id/iv_payorder_wechatname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance"
                android:layout_toRightOf="@+id/iv_payorder_wechatphoto"
                android:text="支付宝支付" />

            <ImageView
                android:id="@+id/iv_iswechatalipay_alipayNomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance"
                android:gravity="end"
                android:src="@mipmap/pay_nomal" />

            <ImageView
                android:id="@+id/iv_iswechatalipay_alipaySelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance"
                android:gravity="end"
                android:src="@mipmap/pay_select" />
        </RelativeLayout>

        <TextView
            android:id="@+id/my_self_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/distance_10"
            android:gravity="center"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_self_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_6e"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />

            <Button
                android:id="@+id/my_self_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_ac0000"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/main_color_write"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>