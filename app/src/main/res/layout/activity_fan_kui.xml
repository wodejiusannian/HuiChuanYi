<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hm_gary"
    android:fitsSystemWindows="true"
    tools:context="com.example.huichuanyi.secondui.FanKuiActivity">

    <RelativeLayout
        android:id="@+id/tl_fankui_mTool"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_color">

        <ImageView
            android:id="@+id/iv_fankui_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="反馈建议"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_big" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_fankui_mTool"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_fankui_jianyi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/hm_background"
            android:gravity="top"
            android:hint="您的建议，我们细心聆听！请说~"
            android:paddingLeft="10dp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="请留下您的联系方式" />

        <EditText
            android:id="@+id/et_fankui_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/distance"
            android:background="@drawable/hm_background"
            android:hint="  例如”1888888888”" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_fankui_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:background="@drawable/button_red"
        android:text="提交建议"
        android:textColor="@color/write" />
</RelativeLayout>
