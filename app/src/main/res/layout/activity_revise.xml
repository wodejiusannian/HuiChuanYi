<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.huichuanyi.ui.activity.ReviseActivity">
    <RelativeLayout
        android:id="@+id/rl_revise_top"
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_revise_back"
            android:src="@drawable/back"
            android:layout_height="match_parent"
            android:layout_width="40dp"
            />
        <TextView
            android:text="修改密码"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:layout_marginTop="@dimen/distance_50"
        android:layout_below="@+id/rl_revise_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:digits="0123456789abcdefghigklmnopqr
                stuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.+-*/="
            android:id="@+id/et_revise_old_pwd"
            android:gravity="center"
            android:hint="原密码"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:maxLength="16"
            android:digits="0123456789abcdefghigklmnopqr
                stuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.+-*/="
            android:id="@+id/et_revise_new_pwd"
            android:gravity="center"
            android:layout_marginTop="@dimen/distance"
            android:hint="新密码"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/btn_revise_revise_pwd"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/distance"
            android:text="确认重置"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>
