<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huichuanyi.ui_third.RecordActivity">
    <RelativeLayout
        android:id="@+id/rl_partner_clothes_top"
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <include layout="@layout/commom_back_btn"></include>
        <TextView
            android:text="服饰伙伴"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tb_record_mTitle"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/distance"
        app:tabSelectedTextColor="@color/write"
        android:layout_below="@+id/tl_closet_mTool"
        app:tabBackground="@drawable/tab_background"
        app:tabIndicatorHeight="0dp"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_record_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
