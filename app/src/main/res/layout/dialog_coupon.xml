<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/shape_gray_4dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_coupon_dialog_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请输入优惠码"
        android:textColor="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_coupon_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_coupon_dialog_top"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_nofill_grayline"
        android:gravity="center"
        android:hint="优惠码" />

    <Button
        android:id="@+id/btn_coupon_dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_coupon_dialog_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_red_4dp"
        android:text="确定"
        android:textColor="#fff" />
</RelativeLayout>