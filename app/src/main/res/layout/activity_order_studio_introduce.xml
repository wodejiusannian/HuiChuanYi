<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hm_gary"
    tools:context="com.example.huichuanyi.ui.newpage.OrderStudioIntroduceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_order_studio_introduce_bottom">

        <include layout="@layout/refresh_reycleview"></include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_studio_introduce_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_order_studio_introduce_go_order"
            android:background="@drawable/shape_go_order_text">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="¥ "
                android:textColor="#ac0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_studio_introduce_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_tip"
                android:text="00.0"
                android:textColor="#ac0000"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_order_studio_introduce_what"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_order_studio_introduce_what"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/hm_order_introduce_what" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="如有疑问请点击此处"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_order_studio_introduce_go_order"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_go_order"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="#fff"
            android:textSize="20sp">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_alpha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:alpha="0"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_alpha"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="*****"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp">

        <include layout="@layout/btn_back"></include>

    </RelativeLayout>

</RelativeLayout>
