<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hm_gary"
    android:fitsSystemWindows="true"
    tools:context=".secondui.ShenQingTuiKuanActivity">

    <RelativeLayout
        android:id="@+id/tl_shenqingtuikuan_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/activityTop">

        <ImageView
            android:id="@+id/iv_shenqing_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            style="@style/ActivityTopTextTitleStyle"
            android:layout_centerInParent="true"
            android:text="申请退款" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_shenqingtuikuan_show"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:background="@drawable/hm_background"
        android:paddingBottom="@dimen/distance">

        <com.example.huichuanyi.custom.RoundImageView
            android:id="@+id/iv_shenqing_photo"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_margin="@dimen/distance"
            android:src="@mipmap/stand" />

        <TextView
            android:id="@+id/tv_shenqing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:layout_toRightOf="@+id/iv_shenqing_photo"
            android:text="王达"
            android:textColor="@color/text_color_high"
            android:textSize="@dimen/body_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:layout_toRightOf="@+id/tv_shenqing_name"
            android:text="衣橱管理师"
            android:textColor="@color/text_color_high"
            android:textSize="@dimen/body_size" />

        <LinearLayout
            android:id="@+id/ll_order_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_shenqing_photo"
            android:background="#cccccc"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_order_line"
            android:layout_marginTop="@dimen/distance"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                android:layout_weight="1"
                android:text="上门服务"
                android:textColor="@color/text_color_high"
                android:textSize="@dimen/body_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="*1"
                android:textColor="@color/text_color_high"
                android:textSize="@dimen/body_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance"
                android:layout_weight="1"
                android:gravity="end"
                android:text="￥0"
                android:textColor="@color/text_color_high"
                android:textSize="@dimen/body_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_order_privilege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_order_four"
            android:layout_margin="@dimen/distance"
            android:src="@mipmap/discount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_order_four"
            android:layout_marginTop="@dimen/distance"
            android:layout_toRightOf="@+id/iv_order_privilege"
            android:text="优惠"
            android:textColor="@color/text_color_high"
            android:textSize="@dimen/body_size" />

        <TextView
            android:id="@+id/tv_order_privilegemoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ll_order_four"
            android:layout_marginRight="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:text="0"
            android:textColor="#080808"
            android:textSize="@dimen/body_size" />

        <LinearLayout
            android:id="@+id/ll_order_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_order_privilege"
            android:background="#cccccc"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_order_line2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance"
                    android:paddingTop="@dimen/distance"
                    android:text="总计￥"
                    android:textColor="@color/text_color_high"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:id="@+id/tv_shenqing_allmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/distance"
                    android:text="0"
                    android:textColor="@color/text_color_high"
                    android:textSize="@dimen/body_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/distance"
                    android:text="总计￥"
                    android:textColor="@color/text_color_high"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:id="@+id/tv_shenqing_moneyall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/distance"
                    android:paddingTop="@dimen/distance"
                    android:text="0"
                    android:textColor="@color/text_color_high"
                    android:textSize="@dimen/body_size" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/rl_order_five"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:background="@drawable/hm_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance"
            android:text="退款原因"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_ground" />

        <EditText
            android:id="@+id/et_shenqing_write"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hm_background"
            android:gravity="start"
            android:hint="请填写退款原因"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_shenqingtuikuan_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:background="@drawable/button_red"
        android:text="确认退款"
        android:textColor="@color/write" />
</RelativeLayout>
