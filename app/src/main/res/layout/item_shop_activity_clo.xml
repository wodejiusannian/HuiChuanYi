<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_shop_activity_iv_clos_cover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_shop_activity_tv_clos_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="--" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_shop_activity_tv_clos_tip"
            style="@style/small_size_text_red_tip"
            android:layout_centerVertical="true"
            android:text="¥:" />

        <TextView
            android:id="@+id/item_shop_activity_tv_clos_price"
            style="@style/small_size_text_red_tip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_shop_activity_tv_clos_tip"
            android:text="--" />

        <TextView
            android:id="@+id/tv_rmb_count_tip"
            style="@style/big_size_text_normal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_shop_activity_tv_clos_count"
            android:text="销量" />

        <TextView
            android:id="@+id/item_shop_activity_tv_clos_count"
            style="@style/big_size_text_normal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="--" />

    </RelativeLayout>
</LinearLayout>