<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui_second.RegisterActivity">

    <RelativeLayout
        android:id="@+id/tl_register_mTool"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_color">

        <include layout="@layout/btn_back"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_register_yetlogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/distance_5"
            android:paddingRight="@dimen/distance_5"
            android:text="已有账号"
            android:textColor="@color/main_color_write"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_register_writephone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:hint="输入手机号"
            android:phoneNumber="true"
            android:textSize="@dimen/text_size_15" />

        <Button
            android:id="@+id/bt_register_getsms"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/distance_20"
            android:background="@drawable/red_4dp"
            android:text="获取验证码"
            android:textColor="@color/main_color_write"
            android:textSize="@dimen/text_size_15"></Button>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#c1bfbf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_10"
                android:gravity="center"
                android:text="or" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#c1bfbf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_register_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance"
                android:src="@mipmap/wechat" />

            <ImageView
                android:id="@+id/iv_register_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                android:src="@mipmap/qq" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
