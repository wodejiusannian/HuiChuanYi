<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_check"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_custom_list_view_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_custom_list_view_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_custom_list_view_item_state"
        android:text="一网通支付" />

    <ImageView
        android:id="@+id/tv_custom_list_view_item_state_is_active"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/rb_custom_list_view_item_state_is_is_check"
        android:layout_toRightOf="@+id/tv_custom_list_view_item_state" />


    <RadioButton
        android:id="@+id/rb_custom_list_view_item_state_is_is_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:button="@null"
        android:clickable="false"
        android:drawableLeft="@drawable/select_pay"
        android:gravity="center" />
</RelativeLayout>