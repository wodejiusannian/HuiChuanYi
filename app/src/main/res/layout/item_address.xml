<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/distance_10">

    <TextView
        android:id="@+id/tv_item_address_is_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_address" />

    <TextView
        android:id="@+id/tv_item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_toRightOf="@+id/tv_item_address_is_select" />

    <TextView
        android:id="@+id/tv_item_address_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_toRightOf="@+id/tv_item_address_name"
        android:text="点击选择地址" />

    <TextView
        android:id="@+id/tv_item_address_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_address_name"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_toLeftOf="@+id/tv_item_update_address"
        android:layout_toRightOf="@+id/tv_item_address_is_select" />

    <ImageView
        android:id="@+id/tv_item_update_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="@dimen/distance_20"
        android:src="@mipmap/edit" />
</RelativeLayout>