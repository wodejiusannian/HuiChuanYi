<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.huichuanyi.bean.PayVideoActivity">
    <RelativeLayout
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <include layout="@layout/commom_back_btn"></include>
        <TextView
            android:text="购买视频"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />
    </RelativeLayout>
    <ImageView
        android:src="@mipmap/four20"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <LinearLayout
        android:id="@+id/test_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/distance"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/distance"
            android:background="@drawable/background2"
            android:text="选择购买"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/background"
            android:padding="@dimen/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.huichuanyi.custom.RoundImageView
                android:id="@+id/rv_pay_video_photo"
                android:layout_width="45dp"
                android:src="@mipmap/stand"
                android:scaleType="fitXY"
                android:layout_height="46dp"/>
            <CheckBox
                android:checked="true"
                android:clickable="false"
                android:id="@+id/cb_pay_order_isSelect"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/distance"
                android:layout_toRightOf="@+id/rv_pay_video_photo"
                android:id="@+id/tv_item_select_speech"
                android:layout_centerVertical="true"
                android:text="于老师的演讲"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/distance"
            android:layout_above="@+id/rl_payvideo_shop"
            android:layout_marginBottom="@dimen/distance"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pay_video_qita"
                android:padding="@dimen/distance"
                android:background="@drawable/background2"
                android:text="购买其他"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:layout_below="@+id/tv_pay_video_qita"
                android:layout_above="@+id/rl_payvideo_shop"
                android:padding="@dimen/distance"
                android:background="@drawable/background"
                android:id="@+id/ll_payvideo_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </ListView>
            <RelativeLayout
                android:layout_marginTop="@dimen/distance"
                android:id="@+id/rl_payvideo_shop"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background2"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:paddingLeft="@dimen/distance"
                    android:id="@+id/tv_text"
                    android:text="总计：￥"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_payvideo_count"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/tv_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_size_middle"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/write"
                    android:id="@+id/bt_payvideo_pay"
                    android:text="确认付款"
                    android:background="@drawable/background3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
