<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_365_six_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_item_365_three_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="服饰推荐"
        android:textColor="#666666"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_365_three_top"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_write_8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:id="@+id/rl_item_365_six_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.huichuanyi.custom.RoundImageView
                android:id="@+id/iv_item_365_six_photo"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_item_365_six_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_item_365_six_photo"
                android:lines="2" />

            <TextView
                android:id="@+id/tv_item_365_six_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_365_six_title"
                android:layout_marginLeft="5dp"
                android:lines="3"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/iv_item_365_six_photo" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_item_365_three_top_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_item_365_six_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/hm_365_heart" />

            <TextView
                android:id="@+id/tv_item_365_three_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#ac0000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_item_365_three_top_three"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="☆每个365会员至少会获得12次以上服饰推荐"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>