<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hm_gary"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.DatumActivity">

    <RelativeLayout
        android:id="@+id/tl_datum_mTool"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_color">

        <include layout="@layout/btn_back"></include>

        <TextView
            style="@style/ActivityTopTextTitleStyle"
            android:layout_centerInParent="true"
            android:text="我的资料" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_datum_mTool"
        android:layout_marginBottom="@dimen/distance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginRight="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hm_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="★ 姓名："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_name1"
                        android:background="@drawable/hm_background"
                        android:hint="中英文皆可"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_name1"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_sex1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="★ 性别："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_datum_sex1"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_sex1"
                        android:background="@drawable/hm_background"
                        android:digits="男女"
                        android:hint="请输入性别"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_sex1"
                        android:background="@color/back_ground" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_city0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="★ 城市："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_city0"
                        android:background="@drawable/hm_background"
                        android:hint="请输入城市"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_city0"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="★ 手机："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_phone"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入手机号"
                        android:maxLength="11"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_phone"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="为了您可以享受更多服务，加★项为必填项"
                    android:textColor="#ac0000"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_age0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="年龄："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_age0"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入年龄"
                        android:maxLength="3"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_age0"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_height1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="身高："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_height1"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入身高"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/et_datum_height"
                        android:text="cm" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_height1"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_weight1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="体重："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_datum_weight1"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_weight1"
                        android:background="@drawable/hm_background"
                        android:hint="请输入体重"
                        android:maxLength="3"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/et_datum_weight"
                        android:text="kg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_weight1"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/distance">

                    <TextView
                        android:id="@+id/tv_datum_work0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="职业："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_work0"
                        android:background="@drawable/hm_background"
                        android:hint="请输入职业"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="定位"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_location"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_business1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="商务："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_business"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_datum_business1"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_business1"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入百分比"
                        android:maxLength="3"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance"
                        android:layout_toRightOf="@+id/et_datum_business"
                        android:text="%"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_business1"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_contact0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="社交："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_contact"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_contact0"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入百分比"
                        android:maxLength="3"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance"
                        android:layout_toRightOf="@+id/et_datum_contact"
                        android:text="%"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_contact0"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/distance">

                    <TextView
                        android:id="@+id/tv_datum_relax0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="休闲："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_relax"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_relax0"
                        android:background="@drawable/hm_background"
                        android:digits="0123456789"
                        android:hint="请输入百分比"
                        android:maxLength="3"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance"
                        android:layout_toRightOf="@+id/et_datum_relax"
                        android:text="%"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="生日："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_datum_nian_yue_ri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_date1"
                        android:text="请选择"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_datum_date1"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_datum_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="颜色喜好："
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_datum_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:listSelector="@drawable/color">

                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_neck1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="颈围："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_neck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_neck1"
                        android:background="@drawable/hm_background"
                        android:hint="请输入颈围"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_datum_neck"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_bear1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="肩围："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_bear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_datum_bear1"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_bear1"
                        android:background="@drawable/hm_background"
                        android:hint="请输入肩围"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_datum_bear"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_bosom0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="胸围："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_bosom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_bosom0"
                        android:background="@drawable/hm_background"
                        android:hint="请输入胸围"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_datum_bosom"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_waist0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="腰围："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_waist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_waist0"
                        android:background="@drawable/hm_background"
                        android:hint="请输入腰围"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_datum_waist"
                        android:background="@color/back_ground" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_datum_nates0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="臀围："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_datum_nates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:layout_toRightOf="@+id/tv_datum_nates0"
                        android:background="@drawable/hm_background"
                        android:hint="请输入臀围"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_datum_selfdom1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="个性特色："
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_datum_selfdom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance"
                android:background="@drawable/hm_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_datum_expect1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance"
                        android:text="期望形象："
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_datum_expect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/btn_datum_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/distance"
                android:background="@drawable/button_red"
                android:text="提交"
                android:textColor="@color/write" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
