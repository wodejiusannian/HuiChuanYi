<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_item_youhuiquan"
            android:layout_width="45dp"
            android:layout_height="46dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@mipmap/stand"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="5dp" />

        <CheckBox
            android:id="@+id/cb_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_youhuiquan_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@+id/sv_item_youhuiquan" />
    </RelativeLayout>
</LinearLayout>