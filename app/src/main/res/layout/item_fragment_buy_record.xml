<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/distance"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_item_buy_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        fresco:roundedCornerRadius="4dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/distance"
        android:layout_toEndOf="@+id/sv_item_buy_record">
        <TextView
            android:id="@+id/tv_item_buy_record_style"
            android:text="款式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_buy_record_name"
            android:text="名字"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@+id/tv_item_buy_record_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_buy_record_size"
            android:text="尺码"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_buy_record_color"
            android:layout_toRightOf="@+id/tv_item_buy_record_size"
            android:layout_centerVertical="true"
            android:text="颜色"
            android:layout_marginLeft="@dimen/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_buy_record_price"
            android:layout_alignParentBottom="true"
            android:text="价格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_buy_record_count"
            android:layout_alignParentBottom="true"
            android:text="数量"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@+id/tv_item_buy_record_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/distance"
        android:layout_below="@+id/sv_item_buy_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/main_color_write"
            android:layout_centerHorizontal="true"
            android:text="查看物流"
            android:background="@drawable/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <Button
            android:layout_alignParentEnd="true"
            android:text="确认收货"
            android:textColor="@color/main_color_write"
            android:background="@drawable/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

        <Button
            android:textColor="@color/main_color_write"
            android:text="联系客服"
            android:background="@drawable/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>