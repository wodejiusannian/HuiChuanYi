<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.huichuanyi.secondui.ShowPhotoActivity">

    <RelativeLayout
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_show_photo_back"
            android:src="@drawable/back"
            android:layout_height="match_parent"
            android:layout_width="40dp"
            />
        <TextView
            android:text="搭配日记"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/distance"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distance"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_time"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_main_xinde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.huichuanyi.custom.RoundImageView
            android:id="@+id/rv_show_photo_first"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <com.example.huichuanyi.custom.RoundImageView
            android:id="@+id/rv_show_photo_second"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>
</LinearLayout>
