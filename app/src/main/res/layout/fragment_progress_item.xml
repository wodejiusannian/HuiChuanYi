<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hm_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_progress_item_dingdan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance"
        android:text="订单号：" />

    <TextView
        android:id="@+id/tv_progress_item_dingdanhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:layout_toRightOf="@+id/tv_progress_item_dingdan" />

    <LinearLayout
        android:id="@+id/ll_line_progress"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_progress_item_dingdan"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/distance"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_progress_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_line_progress"
        android:orientation="horizontal"
        android:padding="@dimen/distance">

        <com.example.huichuanyi.custom.RoundImageView
            android:id="@+id/rv_progress_item_photo"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:scaleType="fitXY"
            android:src="@mipmap/stand" />

        <TextView
            android:id="@+id/tv_progress_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@+id/rv_progress_item_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@+id/tv_progress_item_name" />

        <TextView
            android:id="@+id/tv_progress_item_isPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_progress_item"
        android:layout_marginLeft="@dimen/distance"
        android:background="@color/back_ground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:padding="@dimen/distance">

        <TextView
            android:id="@+id/tv_progress_item_shangmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上门服务" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="*1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/ll_progress_item_youhui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_progress_item_shangmen"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_progress_item_diacount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance"
                android:src="@mipmap/discount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_progress_item_shangmen"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/distance"
                android:layout_toRightOf="@+id/iv_progress_item_diacount"
                android:text="优惠" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_progress_item_allMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ll_progress_item_youhui"
            android:layout_marginTop="@dimen/distance" />

        <ImageView
            android:id="@+id/iv_progress_item_shenqingtuikuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_progress_item_allMoney"
            android:layout_marginTop="@dimen/distance"
            android:src="@mipmap/shenqingtuikuan" />

        <ImageView
            android:id="@+id/iv_progress_item_buchajia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_progress_item_allMoney"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:src="@mipmap/buchajia" />

        <ImageView
            android:id="@+id/iv_progress_item_quzhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_progress_item_allMoney"
            android:layout_marginTop="@dimen/distance"
            android:src="@mipmap/quzhifu" />

        <ImageView
            android:id="@+id/iv_progress_item_zailaiyidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_progress_item_allMoney"
            android:layout_marginTop="@dimen/distance"
            android:src="@mipmap/zailaiyidan" />

        <ImageView
            android:id="@+id/iv_progress_item_daiqueren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_progress_item_allMoney"
            android:layout_marginTop="@dimen/distance"
            android:src="@mipmap/daiqueren" />
    </RelativeLayout>
</RelativeLayout>