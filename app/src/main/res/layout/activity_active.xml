<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".secondui.ActiveActivity">
    <RelativeLayout
        android:id="@+id/tl_active_show"
        android:background="@color/top_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_active_back"
            android:src="@drawable/back"
            android:layout_height="match_parent"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_active_active"
            android:text="活动"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_big"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/tl_active_show"
        android:layout_marginTop="@dimen/distance"
        android:layout_marginBottom="@dimen/distance"
        android:id="@+id/sf_active_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView

            android:id="@+id/lv_active_list"
            android:divider="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
