<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_write_8dp"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_item_365_three_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服饰推荐"
        android:textColor="#666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_item_365_three_top_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_365_three_top"
        android:layout_marginTop="13dp"
        android:text="根据您身体数据，现有服饰资源、并结合您的出行场合及形象期盼，您的私人衣橱管理师将在慧美独家服饰资源基础上为您推荐性价比最高的服饰，只为您更美更得体~"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_item_365_three_top_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_365_three_top_two"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/hm_365_heart" />

        <TextView
            android:id="@+id/tv_item_365_three_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#ac0000"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_item_365_three_top_three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="☆每个365会员至少会获得12次以上服饰推荐"
        android:textSize="10sp" />
</RelativeLayout>