<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tl_mine_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_big" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_mine_show">

        <ImageView
            android:id="@+id/iv_mine_gaosi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_mine_daiti"
            android:scaleType="fitXY"
            android:src="@mipmap/beijing" />

        <com.example.huichuanyi.custom.CircleImageView
            android:id="@+id/iv_mine_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:src="@mipmap/managephoto" />

        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/mysetting" />

        <LinearLayout
            android:id="@+id/ll_mine_perch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mine_photo"
            android:layout_centerHorizontal="true"
            android:layout_margin="13dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_mine_registerandlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="注册/登录" />

                <TextView
                    android:id="@+id/tv_mine_daiti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine_daiti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_mine_perch"
            android:layout_marginTop="@dimen/distance"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_mine_datum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/myinfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="我的资料" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_report"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:layout_marginTop="3dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/myreport" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="我的报告" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:layout_marginTop="15dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/mysubscribe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="我的预约" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_indent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:layout_marginTop="3dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/myorder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="我的订单" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_invite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:layout_marginTop="15dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/myinvite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="邀请好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_marginRight="@dimen/main_margin_right"
                android:layout_marginTop="3dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance"
                    android:src="@mipmap/myexit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="退出登录" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>