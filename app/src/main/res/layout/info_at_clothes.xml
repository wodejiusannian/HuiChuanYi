<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_atClothes_name"
                android:text="名字"
                android:gravity="center"
                android:textSize="@dimen/text_size_middle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.example.huichuanyi.custom.HistogramView
                android:id="@+id/hv_atClothes_progress"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/distance"
                android:layout_marginBottom="@dimen/distance"
                android:layout_marginLeft="@dimen/distance"
                android:layout_marginRight="@dimen/distance"
                >

            </com.example.huichuanyi.custom.HistogramView>
            <TextView
                android:id="@+id/tv_atClothes_count"
                android:text="件数"
                android:gravity="center"
                android:textSize="@dimen/text_size_middle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
</LinearLayout>