<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.loading.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/start" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_splash_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/red_4dp"
            android:text="注册"
            android:textColor="@color/main_color_write" />

        <Button
            android:id="@+id/btn_splash_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/red_4dp"
            android:text="登录"
            android:textColor="@color/main_color_write" />
    </LinearLayout>
</RelativeLayout>
