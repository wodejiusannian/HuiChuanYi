<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_main_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main_navigation"></RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/rg_main_navigation"
        android:background="#e7dada" />

    <RadioGroup
        android:id="@+id/rg_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rb_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/main_title_home"
            android:textColor="@drawable/selector_ac_88" />

        <RadioButton
            android:id="@+id/rb_main_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_order"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/main_title_order"
            android:textColor="@drawable/selector_ac_88" />

        <RadioButton
            android:id="@+id/rb_main_365"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_365"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/main_title_365"
            android:textColor="@drawable/selector_ac_88" />

        <RadioButton
            android:id="@+id/rb_main_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_my"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/main_title_me"
            android:textColor="@drawable/selector_ac_88" />
    </RadioGroup>
</RelativeLayout>
