<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_main_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_main_navigation">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/rg_main_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_main_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/main_title_home"
                android:textColor="@drawable/selector_ac_88" />

            <RadioButton
                android:id="@+id/rb_main_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_order"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/main_title_order"
                android:textColor="@drawable/selector_ac_88" />

            <RadioButton
                android:id="@+id/rb_main_365"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_365"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/main_title_365"
                android:textColor="@drawable/selector_ac_88" />

            <RadioButton
                android:id="@+id/rb_main_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_my"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/main_title_me"
                android:textColor="@drawable/selector_ac_88" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_messager_is_have"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/shape_cicle"
            android:gravity="end" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rl_masking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#78000000"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_main_show_active"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/hm_mask_active"
            fresco:placeholderImageScaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_main_mask_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/hm_mask_delete" />

    </LinearLayout>

</RelativeLayout>
