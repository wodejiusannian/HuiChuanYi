<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_order_studio"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/hm_gary">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item_order_studio_level"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/top_line"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/round_item_order_studio_logo"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_item_order_studio_level_small"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_line"
        android:layout_toLeftOf="@+id/iv_item_order_studio_level_big"
        android:layout_toRightOf="@+id/rl_item_order_studio_level"
        android:paddingBottom="5dp"
        android:paddingLeft="17dp"
        android:paddingRight="31dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/tv_item_order_studio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_item_order_studio_area"
            android:lines="1"
            android:text="***"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_item_order_studio_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_order_studio_name"
            android:layout_alignParentEnd="true"
            android:text="***"
            android:textColor="#333333"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_order_studio_produce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_order_studio_name"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="暂无简介"
            android:textColor="#666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_order_studio_produce">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/hm_studio_distance" />

                <TextView
                    android:id="@+id/tv_item_order_studio_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:text="***"
                    android:textColor="#333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/hm_studio_score" />

                <TextView
                    android:id="@+id/tv_item_order_studio_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:text="***"
                    android:textColor="#333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/hm_studio_ranking" />

                <TextView
                    android:id="@+id/tv_item_order_studio_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:text="***"
                    android:textColor="#333333"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_item_order_studio_level_big"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/top_line"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/iv_item_order_studio_level_star"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:src="@mipmap/hm_studio_star" />
</RelativeLayout>