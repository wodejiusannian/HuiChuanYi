<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:visibility="visible">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sv_type_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/video"
                android:layout_toEndOf="@+id/video"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/play_btn_type_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_play_normal" />

            <com.example.huichuanyi.ui.activity.video.widget.VideoSuperPlayer
                android:id="@+id/super_video_type_one"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>